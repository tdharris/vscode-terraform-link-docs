{
  "name": "terraform-link-docs",
  "displayName": "Terraform Link Docs",
  "description": "Open documentation for Terraform resources, data sources, providers and modules",
  "version": "0.3.1",
  "publisher": "TylerHarris",
  "repository": {
    "type": "git",
    "url": "https://github.com/tdharris/vscode-terraform-link-docs.git"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "terraform",
    "documentation",
    "terragrunt",
    "hcl",
    "devops"
  ],
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#282828",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:terraform",
    "onLanguage:hcl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Terraform Link Docs",
      "properties": {
        "terraform-link-docs.enableCommunityProviders": {
          "type": "boolean",
          "default": true,
          "description": "Enables more accurate link resolution for all providers (including community/3rd-party) by parsing 'required_providers' blocks. If disabled, only HashiCorp-supported providers will be linked correctly."
        }
      }
    },
    "commands": [
      {
        "command": "terraform-link-docs.visitDocumentation",
        "title": "Open the Terraform documentation"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "vscode:publish": "vsce publish",
    "vscode:package": "vsce package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "mocha": "^11.7.5"
  }
}
